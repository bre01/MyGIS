<Window x:Class="Wpf8F.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf8F"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="351*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Open file" HorizontalAlignment="Left" Margin="26,26,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Save file" HorizontalAlignment="Left" Margin="26,82,0,0" VerticalAlignment="Top" Width="52"/>
        <TextBox x:Name="shape_box" HorizontalAlignment="Left" Margin="37,26,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="x_extent_box" HorizontalAlignment="Left" Margin="67,67,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="y_extent_box" HorizontalAlignment="Left" Margin="67,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

    </Grid>
</Window>
